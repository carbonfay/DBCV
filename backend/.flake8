[flake8]
# Matching the black line length (default 88)
max-line-length = 88
max-complexity = 10
enable-extensions = TC, TC2  # or TC1
type-checking-fastapi-enabled = True
type-checking-exempt-modules = typing
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,
    F811,
exclude =
    .flake8,
    .git,
    .*venv/,
    .*env/,
    .bkp/,
    __pycache__,
